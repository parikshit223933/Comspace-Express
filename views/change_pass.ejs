<div class="container mt-5 bg-light p-5">
    <div class="row">
        <div class="col-sm-8 offset-sm-2">
            <form class="form" method="POST" action="/reset_password/password_changed">
                <div>
                    <h1>
                        Change Password
                    </h1>
                </div>
                <div class="form-group">
                    <label for="pass1">Enter new Password</label>
                    <input type="password" required name="pass1" class="form-control" id="pass1" aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                    <label for="pass2">Re-Enter new Password</label>
                    <input type="password" required name="pass2" class="form-control" id="pass2">
                </div>
                <input type="hidden" name="access_token" value="<%=access_token%>">
                <button type="submit" class="btn btn-primary">Change Password</button>
            </form>
        </div>
    </div>
</div>